<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="25sp"
        android:id="@+id/textWelcome"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:onClick="deslogar"
        android:text="Sair"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridLayout
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:rowCount="4"
        android:columnCount="4">

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Inserir Cliente"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnInserirCliente"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="0"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Inserir Funcionario"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnInserirFuncionario"
            android:textSize="8sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="1"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Inserir Fornecedor"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnInserirFornecedor"
            android:textSize="8sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="2"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Inserir Loja"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnInserirLoja"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="3"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Inserir Marca"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnInserirMarca"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="0"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Inserir Setor"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnInserirSetor"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="1"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Inserir Produto"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnInserirProduto"
            android:textSize="11sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="2"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Inserir Venda"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnInserirVenda"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="3"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Listar Clientes"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnListarClientes"
            android:textSize="11sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="0"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Listar FuncionÃ¡rios"
            android:textSize="7sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnListarFuncionarios"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="1"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Listar Fornecedores"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnListarFornecedores"
            android:textSize="7sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="2"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Listar Lojas"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnListarLojas"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="3"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Listar Marcas"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnListarMarcas"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="3"
            android:layout_row="0"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Listar Setores"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnListarSetores"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="3"
            android:layout_row="1"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Listar Produtos"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnListarProdutos"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="3"
            android:layout_row="2"/>

        <Button
            android:layout_gravity="fill"
            android:onClick="carregaItemMenu"
            android:text="Listar Vendas"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/btnListarVendas"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="3"
            android:layout_row="3"/>

    </GridLayout>
</LinearLayout>
