<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editNomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Produto"/>
    <EditText
        android:id="@+id/editDescricaoProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição do Produto"/>
    <EditText
        android:id="@+id/editValidadeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Validade do Produto"/>
    <Spinner
        android:id="@+id/editSpinnerSetorProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Setor do Produto"/>
    <Spinner
        android:id="@+id/editSpinnerMarcaProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca do Produto"/>
    <Spinner
        android:id="@+id/editSpinnerFornecedorProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fornecedor do Produto"/>
    <Button
        android:onClick="salvarProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Salvar"/>

</LinearLayout>