<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editNomeLoja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Loja"/>
    <EditText
        android:id="@+id/editEmailLoja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail da Loja"/>
    <EditText
        android:id="@+id/editCNPJLoja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CNPJ da Loja"/>
    <EditText
        android:id="@+id/editEnderecoLoja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EndereÃ§o da Loja"/>
    <EditText
        android:id="@+id/editTelefoneLoja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone da Loja"/>
    <Button
        android:onClick="salvarLoja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Salvar"/>

</LinearLayout>